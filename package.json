{
  "name": "a11yjis-inspector",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild code.ts --bundle --target=es2018 --outfile=dist/code.js --loader:.json=json && esbuild ui.ts --bundle --target=es2018 --outfile=dist/ui.js",
    "watch": "npm-run-all -p watch:*",
    "watch:code": "esbuild code.ts --bundle --target=es2018 --outfile=dist/code.js --loader:.json=json --watch",
    "watch:ui": "esbuild ui.ts --bundle --target=es2018 --outfile=dist/ui.js --watch",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,html}\""
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.85.0",
    "@types/node": "^20.12.12",
    "esbuild": "^0.21.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
}

