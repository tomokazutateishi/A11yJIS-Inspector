{
  "name": "a11yjis-inspector",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/code.ts --bundle --target=es2018 --outfile=dist/code.js --loader:.json=json && esbuild src/ui/ui.ts --bundle --target=es2018 --outfile=dist/ui.js --format=esm --sourcemap && mkdir -p dist && cp src/ui/ui.html dist/ui.html",
    "watch": "npm-run-all -p watch:*",
    "watch:code": "esbuild src/code.ts --bundle --target=es2018 --outfile=dist/code.js --loader:.json=json --watch",
    "watch:ui": "esbuild src/ui/ui.ts --bundle --target=es2018 --outfile=dist/ui.js --format=esm --sourcemap --watch",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,html}\""
  },
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "^0.16.1",
    "@figma/plugin-typings": "^1.85.0",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "esbuild": "^0.21.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
}
